{
    "include": ["src/**/*", "tests"],
    "exclude": ["tests/**/*"],
	"compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "allowJs": true,
		"checkJs": true,
		"sourceMap": true,
		"target": "ES6",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"strict": true,
        "moduleResolution": "Node",
	},
}
